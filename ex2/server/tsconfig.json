{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@configs": [
        "src/configs"
      ],
      "@environments":["src/configs/environments"],
      "@cores/*": ["src/cores/*"],
      "@common":["src/common"],
      "@constant":["src/_constant"],

    }

  }
}
