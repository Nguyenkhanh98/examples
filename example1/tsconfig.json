{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@auth": [
        "src/auth"
      ],
      "@configs": [
        "src/configs"
      ],
      "@environments":["src/configs/environments"],
      "@cores/*": ["src/cores/*"],
      "@helpers/*": ["src/helpers/*"],
      "@enums/*":["src/database/enums/*"],
      "@entities":["src/database/entities"],
    }

  }
}
